<% if(error){ %>
  <h1 type="label"><%= error %></h1>

<% } %>

 <form action="/register" method="POST">
    <div class="form-group mb-2">
      <label for="email">Enter a email:</label>
      <input class="form-control" type="email" name="email" style="width: 300px; margin: 1em">
      <label for="password">Enter a password:</label>
      <input class="form-control" type="password" name="password" style="width: 300px; margin: 1em">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
  